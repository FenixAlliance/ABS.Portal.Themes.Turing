@inherits FenixAlliance.ABS.Core.Templating.Templates.DynamicComponentBase

@{
    Name = "Turing Forums Template";

    var CartID = Context.Request.Cookies["CartID"];
    if (string.IsNullOrEmpty(CartID))
    {
        CartID = Guid.NewGuid().ToString();
        Context.Response.Cookies.Append("CartID", CartID);
    }
}

<!DOCTYPE html>

<html class="no-js" lang="en">

<head>

    <base href="/" />
    <meta charset="UTF-8">

    @await Component.InvokeAsync("MetaTags", Portal)
    
    @await ViewService.RenderAsync("Head", Model)

    <style>
        .btn-just-icon {
            color: white;
        }
    </style>

</head>
<body>

    @await Component.InvokeAsync("ForexRates", new { CurrentUser = User, CurrentUserIP = CartID })
    <!--====== Main App ======-->
    <div id="app">
        @await ViewService.RenderAsync("Header", Model)
        @Body
        @await ViewService.RenderAsync("Footer", Model)
    </div>

    <!--====== Noscript ======-->
    <noscript>
        <div class="app-setting">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="app-setting__wrap">
                            <h1 class="app-setting__h1">JavaScript is disabled in your browser.</h1>

                            <span class="app-setting__text">
                                Please enable JavaScript in your browser or upgrade to a
                                JavaScript-capable browser.
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </noscript>
    <!--====== End: Noscript ======-->

    @await ViewService.RenderAsync("Scripts", Model)

</body>
</html>