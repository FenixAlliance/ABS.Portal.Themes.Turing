@{Name = "Footer";}

<style>
    .footer-black {
        background: #232323;
        background: radial-gradient(ellipse at center, #0D0E1F 0%, #0D0E1F 100%);
        background-size: 550% 450%;
    }
</style>

<footer class="footer footer-black footer-big text-white" style="background-color:#F2F2F2;">
    <div class="container ">
        <div class="content">
            <hr style="margin-bottom:30px;" />
            <div class="row">

                <div class="col-md-3 col-sm-6">
                    <a href="/">
                        <center>
                            <img src="@Portal.Options.Branding.HeaderLogo.DefaltLogoURL"
                                onerror="this.src='/Portal/images/logo.svg'" style="max-width:100%">
                        </center>
                    </a>
                    <p class="text-center">
                        @_(@Portal.Options.Seo.Organization.Slogan)
                    </p>
                    <center>
                        <strong>
                            @_(@Portal.Options.Description)
                        </strong>
                    </center>
                </div>

                <div class="col-md-2 col-sm-6 col-xs-6 text-center">
                    @await ViewService.InvokeAsync("Footer.1")
                </div>

                <div class="col-md-2 col-sm-6 col-xs-6 text-center">
                    @await ViewService.InvokeAsync("Footer.2")
                </div>

                <div class="col-md-2 col-sm-6 col-xs-6 text-center">
                    @await ViewService.InvokeAsync("Footer.3")
                </div>

                <div class="col-md-3 col-sm-12 col-xs-12 text-center">
                    @await ViewService.InvokeAsync("Footer.4")
                </div>

            </div>
        </div>

        <hr>

        <ul class="social-buttons">

            @if(Portal.Options.Social.TwitterUsername is not null){
            <li>
                <a href="https://twitter.com/@Portal.Options.Social.TwitterUsername" target="_blank"
                    class="btn btn-just-icon btn-link btn-twitter">
                    <i class="fab fa-twitter"></i>
                </a>
            </li>
            }
            @if(Portal.Options.Social.FacebookPageURL is not null){
            <li>
                <a href="@Portal.Options.Social.FacebookPageURL" target="_blank"
                    class="btn btn-just-icon btn-link btn-facebook">
                    <i class="fab fa-facebook-square"></i>
                </a>
            </li>
            }
            @if(Portal.Options.Social.LinkedInURL is not null){
            <li>
                <a href="@Portal.Options.Social.LinkedInURL" target="_blank" class="btn btn-just-icon btn-link"
                    style="color:#0077B5;">
                    <i class="fab fa-linkedin"></i>
                </a>
            </li>
            }
            @if(Portal.Options.Social.InstagramURL is not null){
            <li>
                <a href="@Portal.Options.Social.InstagramURL" target="_blank" class="btn btn-just-icon btn-link"
                    style="color:#fd1d1d;">
                    <i class="fab fa-instagram"></i>
                </a>
            </li>
            }
            @if(Portal.Options.Social.GithubURL is not null){

            <li>
                <a href="@Portal.Options.Social.GithubURL" target="_blank" class="btn btn-just-icon btn-link"
                    style="color:black;">
                    <i class="fab fa-github"></i>
                </a>
            </li>
            }
            @if(Portal.Options.Social.YouTubeURL is not null){

            <li>
                <a href="@Portal.Options.Social.YouTubeURL" target="_blank" class="btn btn-just-icon btn-link"
                    style="color:#ff0000;">
                    <i class="fab fa-youtube"></i>
                </a>
            </li>
            }
        </ul>

        <div class="copyright pull-center">
            <br />@_("Copyright") &copy;
            <a href="/">
                @(Portal.Options.Seo.Organization.LegalName ?? "Contoso Inc.")
            </a>
            Powered by <a href="https://absuite.net">Alliance Business Suite</a>.
        </div>

    </div>
</footer>
<style>
    .mini-footer {
        width: 100%
    }

    .footer-area {
        padding-bottom: 0px !important
    }
</style>