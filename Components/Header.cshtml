@inherits FenixAlliance.ABM.Data.Access.Services.Templating.Razor.Templates.DynamicComponentBase

@{Name = "Header";}


<nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="NavBar">
    <div class="container-xl">

        <a class="navbar-brand" href="javascript:void(0)">
			<img src="@(Portal.Options.Branding.HeaderLogo.DefaltLogoURL ?? "/ui/images/WhiteGenericLogo.svg")"
				onerror="this.src='/ui/images/WhiteGenericLogo.svg'"
				style="max-height:45px;" alt="">
		</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navBar" aria-controls="navBar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-md-center" id="navBar">

			@(Html.Raw(await ViewService.RenderAsync("MainMenu", Model)))

        </div>
    </div>
</nav>

